<Window x:Class="sosiska2.Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sosiska2"
        mc:Ignorable="d"
        Title="Order" Height="450" Width="800">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Добавить"/>
            <Button Grid.Column="1" Content="Редактировать"/>
            <Button Grid.Column="2" Content="Удалить"/>
            <Button Grid.Column="3" Content="Отмена"/>
        </Grid>
        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Заказ"/>
            </DataGrid.Columns>

        </DataGrid>
    </DockPanel>
</Window>
